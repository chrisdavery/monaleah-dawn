{% liquid
    assign active_item = blank
    assign item_values = shop.metaobjects['tribute_wall_items'].values

    paginate item_values by 2
        for item in item_values
            if item.system.id == tribute_id
                assign active_item = item
                break
            endif
        endfor
    endpaginate
%}

{% if active_item %}
  <meta property="og:url" content="{{ finalurl }}">
  <meta property="og:title" content="{{ active_item.title | escape }}">
  <meta property="og:description" content="{{ active_item.content | metafield_tag | strip_html | truncate: 100 | escape | escape }}">
  <meta property="og:image" content="http:{{ active_item.image | img_url: '1200x630', crop: 'center' }}">
  <meta property="og:image:secure_url" content="https:{{ active_item.image | img_url: '1200x630', crop: 'center' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta name="twitter:title" content="{{ active_item.title | escape }}">
  <meta name="twitter:description" content="{{ active_item.content | metafield_tag | strip_html | truncatewords: 30 | escape }}">
  <meta name="twitter:image" content="http:{{ active_item.image | img_url: '1200x630', crop: 'center' }}">
{% endif %}